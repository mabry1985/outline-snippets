{
  "Create LitElement Component With lit-html": {
    "prefix": "outline story",
    "body": [
      "import { html, TemplateResult } from 'lit';",
      "import { ifDefined } from 'lit/directives/if-defined';",
      "import './${TM_FILENAME/(.*?)\\..+/$1/}';",
      "",
      "export default {",
      "\ttitle: '${TM_FILENAME/(.*?)\\..+/${1:/([a-z]*)(-)?/${1:/capitalize}}/g}',",
      "\tcomponent: '${TM_FILENAME/(.*?)\\..+/$1/}',",
      "\targTypes: {",
      "\t\tstringProp: {",
      "\t\t\tcontrol: {",
      "\t\t\t\ttype: 'text',",
      "\t\t\t},",
      "\t\t},",
      "\t},",
      "\targs: {",
      "\t\tstringProp: 'default value',",
      "\t},",
      "};",
      "",
      "const Template = ({",
      "\tstringProp,",
      "}): TemplateResult =>",
      "\thtml`",
      "\t\t<${TM_FILENAME/(.*?)\\..+/$1/}",
      "\t\t\tstringProp='${ifDefined(stringProp)}'",
      "\t\t>",
      "\t\t</${TM_FILENAME/(.*?)\\..+/$1/}>",
      "\t`;",
      "",
      "export const ${TM_FILENAME/(.*?)\\..+/${1:/([a-z]*)(-)?/${1:/capitalize}}/g}Variation = Template.bind({});",
      "${TM_FILENAME/(.*?)\\..+/${1:/([a-z]*)(-)?/${1:/capitalize}}/g}Variation.args = {",
      "\tstringProp: 'overwrite template property',",
      "};",
      ""
    ],
    "description": "New Storybook story template"
  }
}
